    <link rel="stylesheet" href="css/bootstrap.css" />
    <script src="js/bootstrap.js"></script>
    <script src="js/jquery.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script>
        //  展開/收合按鈕
        $(document).ready(function () {

            $("#collapse").on("click", function () {

                $("#sidebar").toggleClass("active");
                $(".fa-align-left").toggleClass("fa-chevron-circle-right");
            })
        })</script>
    <style>
        div {
            border: 1px solid #000;
        }

        .container-all {
            display: flex;
            align-items: stretch;
        }

        #sidebar {
            width: 250px;
            height: 100%;
            background-color: indigo;
            color: white;
            transition: 1s;
        }

            #sidebar.active {
                margin-left: -250px;
            }

        .container-right {
            background-color: lavender;
            width: 100%;
            height: 100vh;
            text-align: center;
            padding: 30px;
        }

        .collapse-btn {
            position: relative;
            top: 1%;
            left: 260px;
            background-color: indigo;
            color: white;
            border: none;
            font-size: 30px;
            padding: 5px;
        }

            .collapse-btn:hover {
                background-color: rgb(120, 5, 203);
                transition: 0.4s;
            }

        #sidebar p {
            text-align: center;
            font-size: 30px;
            font-style: italic;
            padding: 10px;
        }

        #sidebar ul li a {
            padding: 10px;
            font-size: 20px;
            display: block;
            text-decoration: none;
            color: white;
        }

            #sidebar ul li a:hover {
                color: indigo;
                background: #fff;
            }

        .fas,
        .far,
        .fab {
            float: right;
        }

        ul ul li a {
            background-color: rgb(203, 142, 247);
            font-size: 20px;
            font-style: italic;
        }

        @media (max-width:700px) {
            #sidebar {
                margin-left: -150px;
                width: 150px;
                font-size: 20px;
            }

            .collapse-btn {
                position: relative;
                top: 1%;
                left: 160px;
            }

            #sidebar.active {
                margin-left: 0px;
            }

            #sidebar ul p {
                font-size: 18px;
                text-align: left;
            }
        }
    </style>
</head>
<body>
    <div class="container-all">
